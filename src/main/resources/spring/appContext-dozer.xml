<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="mapper" class="ru.andrewquiz.mapper.CustomDozerBeanMapper" scope="singleton">
        <property name="mappingFiles">
            <list>
                <value>dozer/mapping-quiz.xml</value>
            </list>
        </property>
        <property name="customConvertersWithId">
            <map>
                <entry key="LongCategoryConverter" value-ref="longCategoryConverter"/>
                <entry key="LongSuitConverter" value-ref="longSuitConverter"/>
                <entry key="LongQuizConverter" value-ref="longQuizConverter"/>
                <entry key="QuizLongConverter" value-ref="quizLongConverter"/>
                <entry key="QuestionsAnswersCorrelationConverter" value-ref="questionsAnswersCorrelationConverter"/>
                <entry key="KeysConverter" value-ref="keysConverter"/>
                <entry key="LongQuestionsAnswersCorrelationConverter" value-ref="longQuestionsAnswersCorrelationConverter"/>
                <entry key="LongKeysConverter" value-ref="longKeysConverter"/>
            </map>
        </property>
    </bean>

    <bean id="longCategoryConverter" class="ru.andrewquiz.mapper.converter.quiz.LongCategoryConverter"/>
    <bean id="longSuitConverter" class="ru.andrewquiz.mapper.converter.quiz.LongSuitConverter"/>
    <bean id="longQuizConverter" class="ru.andrewquiz.mapper.converter.quiz.LongQuizConverter"/>
    <bean id="quizLongConverter" class="ru.andrewquiz.mapper.converter.quiz.QuizLongConverter"/>
    <bean id="questionsAnswersCorrelationConverter" class="ru.andrewquiz.mapper.converter.quiz.QuestionsAnswersCorrelationConverter"/>
    <bean id="keysConverter" class="ru.andrewquiz.mapper.converter.quiz.KeysConverter"/>
    <bean id="longQuestionsAnswersCorrelationConverter" class="ru.andrewquiz.mapper.converter.quiz.LongQuestionsAnswersCorrelationConverter"/>
    <bean id="longKeysConverter" class="ru.andrewquiz.mapper.converter.quiz.LongKeysConverter"/>

</beans>