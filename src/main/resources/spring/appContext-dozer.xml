<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <bean id="mapper" class="ru.andrewquiz.mapper.CustomDozerBeanMapper" scope="singleton">
        <property name="mappingFiles">
            <list>
                <value>dozer/mapping-quiz.xml</value>
            </list>
        </property>
        <property name="customConvertersWithId">
            <map>
                <entry key="LongCategoryConverter" value-ref="longCategoryConverter"/>
                <entry key="LongSuitConverter" value-ref="longSuitConverter"/>
                <entry key="LongQuizTypeConverter" value-ref="longQuizTypeConverter"/>
                <entry key="QuizTypeLongConverter" value-ref="quizTypeLongConverter"/>
            </map>
        </property>
    </bean>

    <bean id="longCategoryConverter" class="ru.andrewquiz.mapper.converter.quiz.LongCategoryConverter"/>
    <bean id="longSuitConverter" class="ru.andrewquiz.mapper.converter.quiz.LongSuitConverter"/>
    <bean id="longQuizTypeConverter" class="ru.andrewquiz.mapper.converter.quiz.LongQuizTypeConverter"/>
    <bean id="quizTypeLongConverter" class="ru.andrewquiz.mapper.converter.quiz.QuizTypeLongConverter"/>

</beans>