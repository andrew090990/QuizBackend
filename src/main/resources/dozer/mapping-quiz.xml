<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <wildcard>true</wildcard>
        <map-null>false</map-null>
    </configuration>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dto.quiz.Category</class-a>
        <class-b>ru.andrewquiz.dao.quiz.CategoryEntity</class-b>
        <field custom-converter-id="LongCategoryConverter">
            <a>parentCategoryId</a>
            <b>parentCategory</b>
        </field>
        <field-exclude>
            <a>id</a>
            <b>id</b>
        </field-exclude>
        <field-exclude>
            <a>createdAt</a>
            <b>createdAt</b>
        </field-exclude>
        <field-exclude>
            <a>updatedAt</a>
            <b>updatedAt</b>
        </field-exclude>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dao.quiz.CategoryEntity</class-a>
        <class-b>ru.andrewquiz.dto.quiz.Category</class-b>
        <field>
            <a>parentCategory.id</a>
            <b>parentCategoryId</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dto.quiz.Suit</class-a>
        <class-b>ru.andrewquiz.dao.quiz.SuitEntity</class-b>
        <field custom-converter-id="LongCategoryConverter">
            <a>categoryId</a>
            <b>category</b>
        </field>
        <field-exclude>
            <a>id</a>
            <b>id</b>
        </field-exclude>
        <field-exclude>
            <a>createdAt</a>
            <b>createdAt</b>
        </field-exclude>
        <field-exclude>
            <a>updatedAt</a>
            <b>updatedAt</b>
        </field-exclude>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dao.quiz.SuitEntity</class-a>
        <class-b>ru.andrewquiz.dto.quiz.Suit</class-b>
        <field>
            <a>category.id</a>
            <b>categoryId</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dto.quiz.Quiz</class-a>
        <class-b>ru.andrewquiz.dao.quiz.QuizEntity</class-b>
        <field custom-converter-id="LongSuitConverter">
            <a>suitId</a>
            <b>suit</b>
        </field>
        <field custom-converter-id="QuizLongConverter">
            <a>type</a>
            <b>typeId</b>
        </field>
        <field-exclude>
            <a>id</a>
            <b>id</b>
        </field-exclude>
        <field-exclude>
            <a>createdAt</a>
            <b>createdAt</b>
        </field-exclude>
        <field-exclude>
            <a>updatedAt</a>
            <b>updatedAt</b>
        </field-exclude>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dao.quiz.QuizEntity</class-a>
        <class-b>ru.andrewquiz.dto.quiz.Quiz</class-b>
        <field>
            <a>suit.id</a>
            <b>suitId</b>
        </field>
        <field custom-converter-id="LongQuizConverter">
            <a>typeId</a>
            <b>type</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dto.quiz.FullQuiz</class-a>
        <class-b>ru.andrewquiz.dao.quiz.FullQuizEntity</class-b>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dao.quiz.FullQuizEntity</class-a>
        <class-b>ru.andrewquiz.dto.quiz.FullQuiz</class-b>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dto.quiz.Question</class-a>
        <class-b>ru.andrewquiz.dao.quiz.QuestionEntity</class-b>
        <field custom-converter-id="LongQuestionsAnswersCorrelationConverter">
            <a>answers</a>
            <b>answers</b>
        </field>
        <field custom-converter-id="LongKeysConverter">
            <a>keys</a>
            <b>keys</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dao.quiz.QuestionEntity</class-a>
        <class-b>ru.andrewquiz.dto.quiz.Question</class-b>
        <field custom-converter-id="QuestionsAnswersCorrelationConverter">
            <a>answers</a>
            <b>answers</b>
        </field>
        <field custom-converter-id="KeysConverter">
            <a>keys</a>
            <b>keys</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dto.quiz.Answer</class-a>
        <class-b>ru.andrewquiz.dao.quiz.AnswerEntity</class-b>
    </mapping>

    <mapping type="one-way">
        <class-a>ru.andrewquiz.dao.quiz.AnswerEntity</class-a>
        <class-b>ru.andrewquiz.dto.quiz.Answer</class-b>
    </mapping>
</mappings>